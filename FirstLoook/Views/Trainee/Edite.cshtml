
@{
    ViewData["Title"] = "Edite";
}
@model Trainee
<h1>Edite</h1>


<form method="post" action="/Trainee/EditeSave/@Model.Id">
 <div>
     <label>Name :</label>
     <input type="text" name="Name" id="Name" value="@Model.Name" class="form-check form-control"/>
 </div> 
 <div>
     <label>Address :</label>
     <input type="text" name="Address" id="Address" value="@Model.Address" class="form-check form-control"/>
 </div> 
 <div>
     <label>Grade :</label>
     <input type="text" name="Grade" id="Grade" value="@Model.Grade" class="form-check form-control"/>
 </div> 
 <div>
     <label>Image :</label>
     <input type="text" name="Image" id="Image" value="@Model.Image" class="form-check form-control"/>
 </div> 
 <div>
     <label>Department_Id :</label>
     <select name="DeptId" class="form-check form-control">
     @{
          CollegeContext Db = new CollegeContext();
          List<Department> deptList = Db.Departments.ToList();
          foreach (Department dept in deptList)
            {
               if (dept.Id==Model.DeptId)
                {
                    <option value="@dept.Id" selected>@dept.Name</option>
                }
                else
                {
                    <option value="@dept.Id" >@dept.Name</option>
                }
                
            }

      }
       </select>
 </div> 
 <br />
 <input type="submit" value="Update" class="btn btn-outline-success"/>
</form>
 <br />
 <a href="/Trainee/GettAll" class="btn btn-primary">Back To List</a>

